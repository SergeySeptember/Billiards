<?xml version="1.0" encoding="utf-8"?>

<ContentView
    x:Class="Billiards.Views.MatchView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewModels="clr-namespace:Billiards.ViewModels">

    <!-- Локальный инстанс MatchViewModel для этой вьюхи -->
    <ContentView.Resources>
        <viewModels:MatchViewModel x:Key="Vm" />

        <Style x:Key="PlayerPickerStyle"
               TargetType="Picker">
            <Setter Property="FontAttributes" Value="Bold" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="TextColor" Value="{DynamicResource PrimaryTextColor}" />
            <Setter Property="HorizontalTextAlignment" Value="Center" />
        </Style>
    </ContentView.Resources>

    <ScrollView>
        <Grid Padding="16"
              RowSpacing="6"
              ColumnSpacing="8"
              BindingContext="{StaticResource Vm}"
              x:DataType="viewModels:MatchViewModel">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <!-- 0: Тип бильярда -->
                <RowDefinition Height="Auto" />
                <!-- 1: Имена игроков -->
                <RowDefinition Height="Auto" />
                <!-- 2: Заголовок: основные -->
                <RowDefinition Height="Auto" />
                <!-- 3: Основные: значения -->
                <RowDefinition Height="Auto" />
                <!-- 4: Основные: кнопки -->
                <RowDefinition Height="Auto" />
                <!-- 5: Заголовок: случайные -->
                <RowDefinition Height="Auto" />
                <!-- 6: Случайные: значения -->
                <RowDefinition Height="Auto" />
                <!-- 7: Случайные: кнопки -->
                <RowDefinition Height="Auto" />
                <!-- 8: Заголовок: штрафы -->
                <RowDefinition Height="Auto" />
                <!-- 9: Штрафы: значения -->
                <RowDefinition Height="Auto" />
                <!-- 10: Штрафы: кнопки -->
                <RowDefinition Height="Auto" />
                <!-- 11: Таймер -->
                <RowDefinition Height="Auto" />
                <!-- 12: Старт/Пауза + Стоп -->
                <RowDefinition Height="Auto" />
                <!-- 13: Новая партия -->
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Тип бильярда -->
            <Picker Grid.Row="0"
                    Grid.ColumnSpan="2"
                    Title="Вид бильярда"
                    Style="{StaticResource PlayerPickerStyle}"
                    FontAttributes="Bold"
                    FontSize="18"
                    SelectedItem="{Binding SelectedGameType, Mode=TwoWay}">
                <Picker.Items>
                    <x:String>Свободная пирамида</x:String>
                    <x:String>Сибирская пирамида</x:String>
                    <x:String>Московская пирамида</x:String>
                    <x:String>Невская пирамида</x:String>
                    <x:String>Бесконечная пирамида</x:String>
                </Picker.Items>
            </Picker>

            <!-- Имена игроков -->
            <Grid Grid.Row="1"
                  Grid.ColumnSpan="2"
                  ColumnSpacing="8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <VerticalStackLayout Grid.Column="0" Spacing="2">
                    <Label Text="Первый игрок"
                           HorizontalTextAlignment="Center"
                           FontSize="18"
                           FontAttributes="Bold" />

                    <Picker ItemsSource="{Binding Players}"
                            ItemDisplayBinding="{Binding Name}"
                            SelectedItem="{Binding PlayerA, Mode=TwoWay}"
                            IsEnabled="{Binding IsNamesEditable}"
                            Style="{StaticResource PlayerPickerStyle}" />
                </VerticalStackLayout>

                <VerticalStackLayout Grid.Column="1" Spacing="2">
                    <Label Text="Второй игрок"
                           HorizontalTextAlignment="Center"
                           FontSize="18"
                           FontAttributes="Bold" />

                    <Picker ItemsSource="{Binding Players}"
                            ItemDisplayBinding="{Binding Name}"
                            SelectedItem="{Binding PlayerB, Mode=TwoWay}"
                            IsEnabled="{Binding IsNamesEditable}"
                            Style="{StaticResource PlayerPickerStyle}" />
                </VerticalStackLayout>
            </Grid>

            <!-- Забитые шары -->
            <Label Grid.Row="2"
                   Grid.ColumnSpan="2"
                   Text="Забитые шары"
                   FontSize="18"
                   HorizontalTextAlignment="Center"
                   FontAttributes="Bold" />

            <Grid Grid.Row="3"
                  Grid.ColumnSpan="2"
                  ColumnSpacing="8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Label Grid.Column="0"
                       HorizontalTextAlignment="Center"
                       FontSize="24"
                       FontAttributes="Bold"
                       Text="{Binding MainBallsA}" />

                <Label Grid.Column="1"
                       HorizontalTextAlignment="Center"
                       FontSize="24"
                       FontAttributes="Bold"
                       Text="{Binding MainBallsB}" />
            </Grid>

            <Grid Grid.Row="4"
                  Grid.ColumnSpan="2"
                  ColumnSpacing="8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <HorizontalStackLayout Grid.Column="0"
                                       HorizontalOptions="Center">
                    <Button Text=" + "
                            FontSize="24"
                            FontAttributes="Bold"
                            Command="{Binding MainBallsIncrementACommand}" />
                    <Button Text=" - "
                            FontAttributes="Bold"
                            FontSize="28"
                            Margin="16,0,0,0"
                            Command="{Binding MainBallsDecrementACommand}" />
                </HorizontalStackLayout>

                <HorizontalStackLayout Grid.Column="1"
                                       HorizontalOptions="Center">
                    <Button Text=" + "
                            FontSize="24"
                            FontAttributes="Bold"
                            Command="{Binding MainBallsIncrementBCommand}" />
                    <Button Text=" - "
                            FontSize="28"
                            FontAttributes="Bold"
                            Margin="16,0,0,0"
                            Command="{Binding MainBallsDecrementBCommand}" />
                </HorizontalStackLayout>
            </Grid>

            <!-- Дураки -->
            <Label Grid.Row="5"
                   Grid.ColumnSpan="2"
                   Text="Дураки"
                   HorizontalTextAlignment="Center"
                   FontSize="18"
                   FontAttributes="Bold" />

            <Grid Grid.Row="6"
                  Grid.ColumnSpan="2"
                  ColumnSpacing="8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Label Grid.Column="0"
                       HorizontalTextAlignment="Center"
                       FontSize="24"
                       FontAttributes="Bold"
                       Text="{Binding AccidentalBallsA}" />

                <Label Grid.Column="1"
                       HorizontalTextAlignment="Center"
                       FontSize="24"
                       FontAttributes="Bold"
                       Text="{Binding AccidentalBallsB}" />
            </Grid>

            <Grid Grid.Row="7"
                  Grid.ColumnSpan="2"
                  ColumnSpacing="8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <HorizontalStackLayout Grid.Column="0"
                                       HorizontalOptions="Center">
                    <Button Text=" + "
                            FontSize="24"
                            FontAttributes="Bold"
                            Command="{Binding AccidentalBallsIncrementACommand}" />
                    <Button Text=" - "
                            FontSize="28"
                            FontAttributes="Bold"
                            Margin="16,0,0,0"
                            Command="{Binding AccidentalBallsDecrementACommand}" />
                </HorizontalStackLayout>

                <HorizontalStackLayout Grid.Column="1"
                                       HorizontalOptions="Center">
                    <Button Text=" + "
                            FontSize="24"
                            FontAttributes="Bold"
                            Command="{Binding AccidentalBallsIncrementBCommand}" />
                    <Button Text=" - "
                            FontSize="28"
                            FontAttributes="Bold"
                            Margin="16,0,0,0"
                            Command="{Binding AccidentalBallsDecrementBCommand}" />
                </HorizontalStackLayout>
            </Grid>

            <!-- Штрафы -->
            <Label Grid.Row="8"
                   Grid.ColumnSpan="2"
                   Text="Штрафы"
                   HorizontalTextAlignment="Center"
                   FontSize="18"
                   FontAttributes="Bold" />

            <Grid Grid.Row="9"
                  Grid.ColumnSpan="2"
                  ColumnSpacing="8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Label Grid.Column="0"
                       HorizontalTextAlignment="Center"
                       FontSize="24"
                       FontAttributes="Bold"
                       Text="{Binding FoulsA}" />

                <Label Grid.Column="1"
                       HorizontalTextAlignment="Center"
                       FontSize="24"
                       FontAttributes="Bold"
                       Text="{Binding FoulsB}" />
            </Grid>

            <Grid Grid.Row="10"
                  Grid.ColumnSpan="2"
                  ColumnSpacing="8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <HorizontalStackLayout Grid.Column="0"
                                       HorizontalOptions="Center">
                    <Button Text=" + "
                            FontSize="24"
                            FontAttributes="Bold"
                            Command="{Binding FoulsIncrementACommand}" />
                    <Button Text=" - "
                            FontSize="28"
                            FontAttributes="Bold"
                            Margin="16,0,0,0"
                            Command="{Binding FoulsDecrementACommand}" />
                </HorizontalStackLayout>

                <HorizontalStackLayout Grid.Column="1"
                                       HorizontalOptions="Center">
                    <Button Text=" + "
                            FontSize="24"
                            FontAttributes="Bold"
                            Command="{Binding FoulsIncrementBCommand}" />
                    <Button Text=" - "
                            FontSize="28"
                            FontAttributes="Bold"
                            Margin="16,0,0,0"
                            Command="{Binding FoulsDecrementBCommand}" />
                </HorizontalStackLayout>
            </Grid>

            <!-- Таймер -->
            <Label Grid.Row="11"
                   Grid.ColumnSpan="2"
                   HorizontalOptions="Center"
                   FontSize="36"
                   Text="{Binding TimerText}" />

            <!-- Старт/Пауза + Стоп -->
            <Grid Grid.Row="12"
                  Grid.ColumnSpan="2"
                  ColumnSpacing="8"
                  Margin="0,8,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0"
                        FontSize="18"
                        Text="{Binding StartPauseButtonText}"
                        Command="{Binding StartPauseCommand}" />

                <Button Grid.Column="1"
                        Text="Стоп"
                        FontSize="18"
                        Command="{Binding StopCommand}" />
            </Grid>

            <!-- Новая партия -->
            <Button Grid.Row="13"
                    Grid.ColumnSpan="2"
                    Margin="0,16,0,0"
                    HorizontalOptions="Center"
                    WidthRequest="220"
                    Text="Новая партия"
                    FontSize="18"
                    Command="{Binding NewMatchCommand}" />

        </Grid>
    </ScrollView>
</ContentView>